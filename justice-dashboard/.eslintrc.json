{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2024": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "client/dist/"
  ],
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off"
  }
}
