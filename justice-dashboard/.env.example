# Justice Dashboard Environment Variables Template
# Copy this file to .env and fill in your actual values

# Dashboard Authentication
DASH_USER=admin
DASH_PASS=your_secure_password_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Wolfram Alpha API Configuration
WOLFRAM_ALPHA_API_KEY=your_wolfram_api_key_here
WOLFRAM_ALPHA_BASE_URL=https://www.wolframalpha.com/api/v1/llm-api

# Firebase Configuration (VITE_ prefix for client-side access)
# Get these values from Firebase Console > Project Settings > General > Your Apps
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here

# API Configuration
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:3000

# Development settings
NODE_ENV=development
