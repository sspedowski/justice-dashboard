# Justice Dashboard Environment Configuration
# Copy this file to .env and fill in your actual values

# ==================================
# AUTHENTICATION & SECURITY
# ==================================

# JWT Configuration - REQUIRED!
# Generate using: openssl rand -base64 64
JWT_SECRET=your_secure_jwt_secret_here_minimum_64_characters
SESSION_SECRET=your_secure_session_secret_here_minimum_64_characters

# Admin User Configuration
ADMIN_USER=admin
ADMIN_PASS=your_secure_admin_password_here

# Legacy Authentication (for backward compatibility)
DASH_USER=admin
DASH_PASS=your_secure_admin_password_here

# ==================================
# API KEYS & EXTERNAL SERVICES
# ==================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Wolfram Alpha API Configuration
# Get your API key from: https://developer.wolframalpha.com/portal/myapps/
WOLFRAM_ALPHA_API_KEY=YOUR-WOLFRAM-API-KEY-HERE
WOLFRAM_ALPHA_BASE_URL=https://www.wolframalpha.com/api/v1/llm-api

# ==================================
# FIREBASE CONFIGURATION
# ==================================

# Firebase Configuration (VITE_ prefix for client-side access)
# Get these from: Firebase Console -> Project Settings -> General -> Your Apps
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:your_app_id_here

# Firebase Admin SDK Configuration (for backend)
# Path to your Firebase service account key file
FIREBASE_ADMIN_KEY_PATH=./firebase-admin-key.json

# ==================================
# SERVER CONFIGURATION
# ==================================

# Server Settings
PORT=3000
NODE_ENV=development

# URL Configuration
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000

# ==================================
# OPTIONAL SERVICES
# ==================================

# Database Configuration (if using external DB)
# DATABASE_URL=your_database_connection_string_here

# Email Configuration (for notifications)
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_email@domain.com
# SMTP_PASS=your_email_password

# Monitoring and Logging
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# LOG_LEVEL=info
