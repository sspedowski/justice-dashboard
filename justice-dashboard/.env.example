# Justice Dashboard Environment Variables Template
# Copy this file to .env and fill in your actual values

# Dashboard Authentication (Legacy - consider removing)
DASH_USER=admin
DASH_PASS=your_secure_password_here

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Wolfram Alpha API Configuration
# Get your API key from: https://developer.wolframalpha.com/portal/myapps/
WOLFRAM_ALPHA_API_KEY=YOUR-WOLFRAM-API-KEY-HERE
WOLFRAM_ALPHA_BASE_URL=https://www.wolframalpha.com/api/v1/llm-api

# Firebase Configuration (VITE_ prefix for client-side access)
# Get these from: Firebase Console -> Project Settings -> General -> Your Apps
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:your_app_id_here

# API Configuration
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:3000

# Security Configuration - REQUIRED!
# Generate strong secrets using: openssl rand -base64 64
JWT_SECRET=your_secure_jwt_secret_here_64_characters_minimum
SESSION_SECRET=your_secure_session_secret_here_64_characters_minimum
NODE_ENV=development

# Wolfram Alpha API Configuration
WOLFRAM_ALPHA_API_KEY=your_wolfram_api_key_here
WOLFRAM_ALPHA_BASE_URL=https://www.wolframalpha.com/api/v1/llm-api

# Firebase Configuration (VITE_ prefix for client-side access)
# Get these values from Firebase Console > Project Settings > General > Your Apps
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here

# API Configuration
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:3000

# Development settings
NODE_ENV=development
